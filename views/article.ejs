<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home</title>
    <%- include("partials/head") %>
  </head>
  <body>
    <%- include("partials/navbar") %>

    <div class="container-fluid text-center bg-imageee text-light mb-4">
      <div class="row justify-content-center">
        <div class="col-6">
          <h1 class="fs-1 font-open-sans"><%= article.title %></h1>
          <small
            >Creado por <%= article.user.firstname %> el <%= format( article.createdAt, "dd" ) %> de
            <%= format( article.createdAt, "MMMM", {locale: es} ) %>, <%= format( article.createdAt,
            "yyyy" ) %></small
          >
        </div>
      </div>
    </div>

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-6">
          <div class="px-4">
            <img src="<%= article.image %>" alt="Imagen del Articulo" class="mb-5" />
            <p><%= article.content %></p>
            <hr class="my-5" />
            <form action="/articulos/<%= article.id %>/comentarios" method="post" class="mb-5">
              <div class="mb-3">
                <legend>Add your comment</legend>
                <input
                  type="text"
                  class="form-control"
                  id="username"
                  name="username"
                  placeholder="Name"
                />
              </div>
              <div class="mb-3">
                <textarea name="content" id="content" class="width-100 heigth-6-rem"></textarea>
              </div>

              <button type="submit" class="btn btn-primary width-100" id="btn">Send</button>
            </form>
            <h3 id="commentsCount"></h3>
            <!--             <button
              id="viewMoreBtn"
              type="sub
            "
              class="btn btn-primary"
            ></button> -->
          </div>
        </div>
      </div>
    </div>

    <%- include("partials/footer") %>

    <script>
      const viewMoreBtn = document.querySelector("#viewMoreBtn");
      const result = document.querySelector("#result");

      /*  btn.addEventListener("click", () => {
        const num1 = document.querySelector("#num1").value;
        const num2 = document.querySelector("#num2").value;
      }); */

      fetch(`/articulos/<%= article.id %>/comentarios`)
        .then((response) => response.json())
        .then(function (data) {
          for (let i = data.count; i === 0; i--) {
            const commentsCount = document.querySelector("#commentsCount");
            commentsCount.textContent = `Comments(${data.count})`;
            const comments = data.rows;
            commentsCount.insertAdjacentHTML(
              "afterend",
              `<p>${comments[i].content}</p> <small class="text-secondary fst-italic fs-8 font-lora">${comments[i].username}</small> <hr>`,
            );
          }
        });
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
