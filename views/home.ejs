<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home</title>
    <%- include("partials/head") %>
  </head>
  <body>
    <%- include("partials/navbar") %>

    <div class="container-fluid text-center bg-imageee text-light mb-4">
      <div class="row justify-content-center">
        <div class="col-6">
          <h1 class="fs-1 font-open-sans">Hack the blog</h1>
          <small>El Blog de Hack Academy</small>
        </div>
      </div>
    </div>
    <% for (const article of articles) { %>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-6">
          <div class="px-4">
            <h2 class="fs-4 fw-bold font-open-sans">
              <a
                href="http://localhost:3000/articulos/<%= article.id %>"
                class="text-decoration-none"
                ><%= article.title %></a
              >
            </h2>
            <small class="text-secondary fst-italic fs-8 font-lora"
              >Creado por <%= article.user.firstname %> el 24 de Setiembre, 2022</small
            >
          </div>
          <hr />
        </div>
      </div>
    </div>
    <% } %>
    <!-- -- -->
    <%- include("partials/footer") %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
